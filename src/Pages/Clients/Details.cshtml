@page
@model DetailsModel

@{
    ViewData["Title"] = "Clients";
}

<div class="container">
    <h4>Client Details</h4>
    <hr />
    <div class="row">
        <div class="col-6">
            <dl>
                <dt>@Html.DisplayNameFor(model => model.Client.Name)</dt>
                <dd>@Html.DisplayFor(model => model.Client.Name)</dd>
                <dt>@Html.DisplayNameFor(model => model.Client.ClientId)</dt>
                <dd>@Html.DisplayFor(model => model.Client.ClientId)</dd>
                <dt>@Html.DisplayNameFor(model => model.Client.PlatformIssuer)</dt>
                <dd>@Html.DisplayFor(model => model.Client.PlatformIssuer)</dd>
                <dt>@Html.DisplayNameFor(model => model.Client.PlatformJsonWebKeysUrl)</dt>
                <dd>@Html.DisplayFor(model => model.Client.PlatformJsonWebKeysUrl)</dd>
                <dt>@Html.DisplayNameFor(model => model.Client.PlatformAccessTokenUrl)</dt>
                <dd>@Html.DisplayFor(model => model.Client.PlatformAccessTokenUrl)</dd>
            </dl>
            <div>
                <a asp-page="./Edit" asp-route-id="@Model.Client.Id">Edit</a> |
                <a asp-page="./Index">Back to List</a>
            </div>
        </div>
    </div>
</div>
