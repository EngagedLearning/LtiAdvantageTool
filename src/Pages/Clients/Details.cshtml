@page
@model DetailsModel

@{
    ViewData["Title"] = "Clients";
}

<div class="container">
    <h4>Client Details</h4>
    <hr />
    <div class="row">
        <div class="col-6">
            <dl>
                <dt>@Html.DisplayNameFor(model => model.Client.ClientId)</dt>
                <dd>@Html.DisplayFor(model => model.Client.ClientId)</dd>
                <dt>@Html.DisplayNameFor(model => model.Client.ClientSecret)</dt>
                <dd>@Html.DisplayFor(model => model.Client.ClientSecret)</dd>
                <dt>@Html.DisplayNameFor(model => model.Client.ClientName)</dt>
                <dd>@Html.DisplayFor(model => model.Client.ClientName)</dd>
                <dt>@Html.DisplayNameFor(model => model.Client.Issuer)</dt>
                <dd>@Html.DisplayFor(model => model.Client.Issuer)</dd>
                <dt>@Html.DisplayNameFor(model => model.Client.AccessTokenUrl)</dt>
                <dd>@Html.DisplayFor(model => model.Client.AccessTokenUrl)</dd>
                <dt>@Html.DisplayNameFor(model => model.Client.JsonWebKeysUrl)</dt>
                <dd>@Html.DisplayFor(model => model.Client.JsonWebKeysUrl)</dd>
            </dl>
        </div>
        <div>
            <a asp-page="./Edit" asp-route-id="@Model.Client.Id">Edit</a> |
            <a asp-page="./Index">Back to List</a>
        </div>
    </div>
</div>
