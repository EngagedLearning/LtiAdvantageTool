@page
@model CreateModel

@{
    ViewData["Title"] = "Platforms";
}

<div class="container-fluid">
    <h4>Register Platform</h4>
    <hr />
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-lg-6 mb-3">
                <div class="card">
                    <h5 class="card-header bg-secondary text-light">
                        Platform Settings
                    </h5>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Platform.Name"></label>
                            <input asp-for="Platform.Name" class="form-control" />
                            <span asp-validation-for="Platform.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Platform.Issuer"></label>
                            <tooltip asp-for="Platform.Issuer"></tooltip>
                            <input asp-for="Platform.Issuer" class="form-control" />
                            <span asp-validation-for="Platform.Issuer" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Platform.JsonWebKeySetUrl"></label>
                            <tooltip asp-for="Platform.JsonWebKeySetUrl"></tooltip>
                            <input asp-for="Platform.JsonWebKeySetUrl" class="form-control" />
                            <span asp-validation-for="Platform.JsonWebKeySetUrl" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Platform.AccessTokenUrl"></label>
                            <tooltip asp-for="Platform.AccessTokenUrl"></tooltip>
                            <input asp-for="Platform.AccessTokenUrl" class="form-control" />
                            <span asp-validation-for="Platform.AccessTokenUrl" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 mb-3">
                <div class="card">
                    <h5 class="card-header bg-secondary text-light">
                        Tool Settings
                    </h5>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Client.ClientId"></label>
                            <input asp-for="Client.ClientId" class="form-control" readonly="readonly" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Client.PublicKey"></label>
                            <tooltip asp-for="Client.PublicKey"></tooltip>
                            <textarea asp-for="Client.PublicKey" class="form-control text-monospace small" rows="5" readonly="readonly"></textarea>
                        </div>
                        <div class="form-group">
                            <label asp-for="Client.PrivateKey"></label>
                            <tooltip asp-for="Client.PrivateKey"></tooltip>
                            <textarea asp-for="Client.PrivateKey" class="form-control text-monospace small" rows="5" readonly="readonly"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-secondary" />
        </div>
    </form>

    <div>
        <a asp-page="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
