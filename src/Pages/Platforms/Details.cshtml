@page
@model DetailsModel

@{
    ViewData["Title"] = "Platforms";
}

<div class="container-fluid">
    <h4>Platform Details</h4>
    <hr />
    <div class="row">
        <div class="col-lg-6 mb-3">
            <div class="card">
                <h5 class="card-header bg-secondary text-light">
                    Platform Settings
                </h5>
                <div class="card-body">
                    <dl>
                        <dt>@Html.DisplayNameFor(m => m.Platform.Name)</dt>
                        <dd>@Model.Platform.Name</dd>
                        <dt>
                            @Html.DisplayNameFor(m => m.Platform.Issuer)
                            <tooltip asp-for="Platform.Issuer"></tooltip>
                        </dt>
                        <dd>@Html.DisplayFor(m => m.Platform.Issuer)</dd>
                        <dt>@Html.DisplayNameFor(m => m.Platform.JsonWebKeySetUrl)</dt>
                        <dd>@(Model.Platform.JsonWebKeySetUrl ?? "[Not Set]")</dd>
                        <dt>@Html.DisplayNameFor(m => m.Platform.AccessTokenUrl)</dt>
                        <dd>@(Model.Platform.AccessTokenUrl ?? "[Not Set]")</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-3">
            <div class="card">
                <h5 class="card-header bg-secondary text-light">
                    Tool Settings
                </h5>
                <div class="card-body">
                    <dl>
                        <dt>@Html.DisplayNameFor(m => m.Platform.ClientId)</dt>
                        <dd>@Html.DisplayFor(m => m.Platform.ClientId)</dd>
                        <dt>
                            @Html.DisplayNameFor(m => m.Platform.ClientPrivateKey)
                            <tooltip asp-for="Platform.ClientPrivateKey"></tooltip>
                        </dt>
                        <dd>
                            <pre class="security-key">@(Model.Platform.ClientPrivateKey ?? "[Not Set]")</pre>
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(m => m.Platform.ClientPublicKey)
                            <tooltip asp-for="Platform.ClientPublicKey"></tooltip>
                            <a class="float-right" href="#" onclick="copyToClipboard($('#@Html.IdFor(m => m.Platform.ClientPublicKey)').text());">Copy Public Key</a>
                        </dt>
                        <dd>
                            <pre id="@Html.IdFor(m => m.Platform.ClientPublicKey)" class="security-key">@(Model.Platform.ClientPublicKey ?? "[Not Set]")</pre>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div>
            <a asp-page="./Edit" asp-route-id="@Model.Platform.Id">Edit</a> |
            <a asp-page="./Index">Back to List</a>
        </div>
    </div>
</div>