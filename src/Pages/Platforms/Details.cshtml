@page
@model DetailsModel

@{
    ViewData["Title"] = "Platforms";
}

<div class="container-fluid">
    <h4>Platform Details</h4>
    <hr />
    <div class="row">
        <div class="col-lg-6 mb-3">
            <div class="card">
                <h5 class="card-header bg-secondary text-light">
                    Platform Settings
                </h5>
                <div class="card-body">
                    <dl>
                        <dt>@Html.DisplayNameFor(m => m.Platform.Name)</dt>
                        <dd>@Model.Platform.Name</dd>
                        <dt>
                            @Html.DisplayNameFor(m => m.Platform.Issuer)
                            <tooltip asp-for="Platform.Issuer"></tooltip>
                        </dt>
                        <dd>@Html.DisplayFor(m => m.Platform.Issuer)</dd>
                        <dt>@Html.DisplayNameFor(m => m.Platform.JwkSetUrl)</dt>
                        <dd>@(Model.Platform.JwkSetUrl ?? "[Not Set]")</dd>
                        <dt>@Html.DisplayNameFor(m => m.Platform.AccessTokenUrl)</dt>
                        <dd>@(Model.Platform.AccessTokenUrl ?? "[Not Set]")</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-3">
            <div class="card">
                <h5 class="card-header bg-secondary text-light">
                    Tool Settings
                </h5>
                <div class="card-body">
                    <dl>
                        <dt>@Html.DisplayNameFor(m => m.Client.ClientId)</dt>
                        <dd>@Model.Client.ClientId</dd>
                        <dt>
                            @Html.DisplayNameFor(m => m.Client.PrivateKey)
                            <tooltip asp-for="Client.PrivateKey"></tooltip>
                        </dt>
                        <dd>
                            <pre class="security-key">@(Model.Client.PrivateKey ?? "[Not Set]")</pre>
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(m => m.Client.PublicKey)
                            <tooltip asp-for="Client.PublicKey"></tooltip>
                        </dt>
                        <dd>
                            <pre id="@Html.IdFor(m => m.Client.PublicKey)" class="security-key">@(Model.Client.PublicKey ?? "[Not Set]")</pre>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div>
            <a asp-page="./Edit" asp-route-id="@Model.Platform.Id">Edit</a> |
            <a asp-page="./Index">Back to List</a>
        </div>
    </div>
</div>