@page
@model ToolModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <title>Launch</title>
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" 
              integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" 
              crossorigin="anonymous"
              asp-fallback-href="~/lib/bootstrap/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" 
              asp-fallback-test-property="position"
              asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
    <style type="text/css">
        body {
            overflow-x: hidden;
            margin-bottom: 15px;
        }

        body > .container-fluid {
            padding-top: 15px;
        }
    </style>
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <div class="col">
            @if (string.IsNullOrEmpty(Model.Error))
            {
                <div class="alert alert-success">Launch Successful!</div>
            }
            else
            {
                <div class="alert alert-danger">@Model.Error</div>
            }
        </div>
    </div>
    @if (string.IsNullOrEmpty(Model.Error))
    {
        <div class="row">
            <div class="col-md-6">
                @if (Model.LtiRequest.NamesRoleService != null)
                {
                    <div class="card mb-3">
                        <div class="card-header">Names and Role Service</div>
                        <div class="card-body">
                            <form method="post" asp-page-handler="NamesRoleService">
                                <input type="hidden" name="id_token" id="id_token" value="@Model.IdToken" />
                                <input type="hidden" name="context_id" id="context_id" value="@Model.LtiRequest.Context.Id" />
                                <input type="hidden" asp-for="ClientId" />
                                <input type="submit" value="Get Course Members" class="btn btn-secondary" />
                            </form>
                            <pre class="mt-3">@Model.Membership</pre>
                        </div>
                    </div>
                }
                <div class="card mb-3">
                    <div class="card-header">
                        JWT Header
                    </div>
                    <pre class="card-body">@Model.Token.Header.ToJsonString()</pre>
                </div>
                <div class="card">
                    <div class="card-header">
                        JWT Payload
                    </div>
                    <pre class="card-body">@Model.LtiRequest.ToJsonString()</pre>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-header">OpenID Claims</div>
                    <div class="card-body">
                        <dl>
                            @foreach (var claim in Model.LtiRequest.Claims)
                            {
                                if (!claim.Type.Contains("imsglobal"))
                                {
                                    <dt>@claim.Type</dt>
                                    <dd>@claim.Value</dd>
                                }
                            }
                        </dl>
                    </div>
                </div>
                <div class="card mb-3">
                    <div class="card-header">
                        LTI Claims
                    </div>
                    <div class="card-body">
                        <dl>
                            <dt>Message Type</dt>
                            <dd>@Model.LtiRequest.MessageType</dd>
                            <dt>Version</dt>
                            <dd>@Model.LtiRequest.Version</dd>
                            <dt>Deployment ID</dt>
                            <dd>@Model.LtiRequest.DeploymentId</dd>
                            <dt>Resource Link:</dt>
                            <dd>
                                <div class="offset-1 mt-3">
                                    <dl>
                                        <dt>Id</dt>
                                        <dd>@Model.LtiRequest.ResourceLink.Id</dd>
                                        <dt>Title</dt>
                                        <dd>@Model.LtiRequest.ResourceLink.Title</dd>
                                        <dt>Description</dt>
                                        <dd>@(Model.LtiRequest.ResourceLink.Description ?? "[Not Set]")</dd>
                                    </dl>
                                </div>
                            </dd>
                            <dt>Context</dt>
                            <dd>
                                <div class="offset-1 mt-3">
                                    <dl>
                                        <dt>Id</dt>
                                        <dd>@Model.LtiRequest.Context.Id</dd>
                                        <dt>Label</dt>
                                        <dd>@(Model.LtiRequest.Context.Label ?? "[Not Set]")</dd>
                                        <dt>Title</dt>
                                        <dd>@Model.LtiRequest.Context.Title</dd>
                                        <dt>Type</dt>
                                        <dd>@string.Join(", ", Model.LtiRequest.Context.Type)</dd>
                                    </dl>
                                </div>
                            </dd>
                            <dt>Roles</dt>
                            <dd>@string.Join(", ", Model.LtiRequest.Roles)</dd>
                            <dt>Launch Presentation</dt>
                            <dd>
                                <div class="offset-1 mt-3">
                                    <dl>
                                        <dt>Document Target</dt>
                                        <dd>@Model.LtiRequest.LaunchPresentation.DocumentTarget</dd>
                                        <dt>Height</dt>
                                        <dd>@Model.LtiRequest.LaunchPresentation.Height</dd>
                                        <dt>Width</dt>
                                        <dd>@Model.LtiRequest.LaunchPresentation.Width</dd>
                                        <dt>Return URL</dt>
                                        <dd>@Model.LtiRequest.LaunchPresentation.ReturnUrl</dd>
                                    </dl>
                                </div>
                            </dd>
                            @if (Model.LtiRequest.RoleScopeMentor.Any(i => !string.IsNullOrEmpty(i)))
                            {
                                <dt>Role Scope Mentor</dt>
                                <dd>@string.Join(", ", Model.LtiRequest.RoleScopeMentor)</dd>
                            }
                            <dt>Tool Platform</dt>
                            <dd>
                                <div class="offset-1 mt-3">
                                    <dl>
                                        <dt>Contact Email</dt>
                                        <dd>@Model.LtiRequest.Platform.ContactEmail</dd>
                                        <dt>Description</dt>
                                        <dd>@Model.LtiRequest.Platform.Description</dd>
                                        <dt>GUID</dt>
                                        <dd>@Model.LtiRequest.Platform.Guid</dd>
                                        <dt>Name</dt>
                                        <dd>@Model.LtiRequest.Platform.Name</dd>
                                        <dt>Product Family Code</dt>
                                        <dd>@Model.LtiRequest.Platform.ProductFamilyCode</dd>
                                        <dt>URL</dt>
                                        <dd>@Model.LtiRequest.Platform.Url</dd>
                                        <dt>Version</dt>
                                        <dd>@Model.LtiRequest.Platform.Version</dd>
                                    </dl>
                                </div>
                            </dd>
                            <dt>LIS</dt>
                            <dd>
                                <div class="offset-1 mt-3">
                                    <dl>
                                        <dt>Course Section Sourced ID</dt>
                                        <dd>@Model.LtiRequest.Lis?.CourseSectionSourcedId</dd>
                                        <dt>Person Sourced ID</dt>
                                        <dd>@Model.LtiRequest.Lis?.PersonSourcedId</dd>
                                    </dl>
                                </div>
                            </dd>

                            <dt>Custom</dt>
                            <dd><pre>@Model.LtiRequest.Custom.ToJsonString()</pre></dd>

                        </dl>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<environment include="Development">
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</environment>
<environment exclude="Development">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            asp-fallback-src="~/lib/jquery/jquery.min.js"
            asp-fallback-test="window.jQuery"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
            crossorigin="anonymous">
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
            integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
            crossorigin="anonymous">
    </script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
            integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
            crossorigin="anonymous">
    </script>

    <script src="~/js/site.min.js" asp-append-version="true"></script>
</environment>

</body>
</html>
